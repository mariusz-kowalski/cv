function load_into(url, target) {
  var jqxhr = $.get(url, function(data){
    $(target).html(data);
  });

  jqxhr.fail(function() {
    $(target).text( "Error. Code: " + jqxhr.status + ", message: " + jqxhr.statusText );
  });
}

