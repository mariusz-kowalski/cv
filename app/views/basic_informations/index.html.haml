%h1= resource_name.humanize

- if @informations.empty?
  %div There is no any informations
- else
  - @informations.each do |information|
    - show_link = link_to 'show', resource_path(information)
    - delete_link = link_to 'delete', 
      resource_path(information), 
      method: :delete, 
      data: {confirm: "Are you sure want to delete information?"}
    = render layout: 'row_4cols', 
        locals: {label: information.name,
            col2: show_link,
            col3: delete_link,
            col4: @special_action_link} do
      = link_to information.value, edit_resource_path(information)
